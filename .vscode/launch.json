    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "使用本機chrome除錯",
            "type": "chrome",
            "request": "launch",
            "file":"${file}",
            "runtimeExecutable":"/Applications",
            //"runtimeExecutable":這裡寫自己瀏覽器的安裝路徑，按自己路徑作修改即可
            "sourceMaps":true,
            "webRoot": "${workspaceRoot}",
            "userDataDir":"${tmpdir}",
            "port":9222
          }
    ]
}